{
  "include": ["src"],
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noUncheckedIndexedAccess": true,
    "types": ["node"],
    "skipLibCheck": true,
  }
}